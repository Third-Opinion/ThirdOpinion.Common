        <PackageReference Include="Moq" Version="4.20.72"/>
        <PackageReference Include="Microsoft.AspNetCore.Mvc.Testing" Version="8.0.8"/>
    </ItemGroup>

    <ItemGroup>
        <Using Include="Xunit"/>
